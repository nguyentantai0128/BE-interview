{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDirs": ["src"],
    "lib": ["ES2016", "ES2017", "ES2017.Object", "ES2020"],
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "exclude": ["node_modules", "src/config/config.js"],
  "include": ["src/**/*"]
}
